{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": [2, "never"],
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "no-use-before-define": "off"
  }
}
